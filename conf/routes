# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /cat/:id             @controllers.ApplicationController.byId(id:Long)
POST          /cat                 @controllers.ApplicationController.add
PUT           /cat                 @controllers.ApplicationController.update
DELETE        /cat/:id             @controllers.ApplicationController.delete(id:Long)
GET           /cats                @controllers.ApplicationController.cats

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

